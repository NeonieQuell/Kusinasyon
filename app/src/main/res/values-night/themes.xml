<resources>
    <style name="Theme.Kusinasyon" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/magic_potion_500</item>
        <item name="colorPrimaryVariant">@color/magic_potion_700</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/magic_potion_500</item>
        <item name="colorSecondaryVariant">@color/magic_potion_700</item>
        <item name="colorOnSecondary">@color/sonic_silver_900</item>

        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="CustomToolbarTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/typescale_title_large</item>
    </style>

    <style name="CustomToolbarPopupTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/typescale_body_medium</item>
    </style>

    <style name="CustomTabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/typescale_body_medium</item>
    </style>

    <style name="CustomBtmNavViewTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/typescale_body_small</item>
    </style>

    <style name="CustomTvIndicator">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:layout_marginStart">@dimen/screen_padding</item>
        <item name="android:layout_marginEnd">@dimen/screen_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomTvHeadLineSmall" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/sonic_silver_900</item>
    </style>

    <style name="CustomBtnPrimaryFilled">
        <item name="cornerRadius">@dimen/shape_full</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">@dimen/typescale_body_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:outlineAmbientShadowColor">@color/magic_potion_700</item>
        <item name="android:outlineSpotShadowColor">@color/magic_potion_700</item>
    </style>

    <style name="CustomBtnPrimaryOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/shape_full</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">@dimen/typescale_body_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:outlineAmbientShadowColor">@color/magic_potion_700</item>
        <item name="android:outlineSpotShadowColor">@color/magic_potion_700</item>
    </style>

    <style name="CustomBtnTextBtn" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:maxLines">1</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/typescale_body_medium</item>
    </style>

    <style name="CustomIconOnlyButton" parent="Widget.MaterialComponents.Button">
        <item name="minWidth">0dp</item>
        <item name="paddingStart">6dp</item>
        <item name="paddingEnd">6dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="cornerRadius">@dimen/shape_full</item>
        <item name="iconPadding">0dp</item>
    </style>

    <!--  CardView Bottom Sheet Shape Appearance  -->
    <style name="CustomCardViewBottomSheetStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_Card_Custom_Corner</item>
    </style>

    <style name="ShapeAppearanceOverlay_Card_Custom_Corner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/shape_extra_large</item>
        <item name="cornerSizeTopRight">@dimen/shape_extra_large</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_scale_up</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_scale_down</item>
    </style>
</resources>
