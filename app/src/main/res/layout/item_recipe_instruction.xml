<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:paddingStart="@dimen/screen_padding"
    android:paddingTop="8dp"
    android:paddingEnd="@dimen/screen_padding"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tv_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/screen_padding"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_regular"
        android:maxLines="1"
        android:text="N"
        android:textColor="@color/sonic_silver_700"
        android:textSize="@dimen/typescale_title_large" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="3dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_counter"
        android:layout_alignBottom="@id/tv_counter"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/screen_padding"
        android:layout_toEndOf="@id/tv_counter"
        app:dividerColor="?attr/colorPrimary" />

    <TextView
        android:id="@+id/tv_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/screen_padding"
        android:layout_toEndOf="@id/divider"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_vertical"
        android:text="Instruction" />
    
</RelativeLayout>
